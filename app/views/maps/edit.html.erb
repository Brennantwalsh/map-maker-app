<h1>Tell me what you saw.</h1>

<%= form_tag "/maps/#{@map.id}", method: :patch do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @map.name %>
  </div>
  <div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @map.description %>
  </div>
  <div>
  <%= label_tag :row_number %>
  <%= text_field_tag :row_number, @map.row_number %>
  </div>
  <div>
  <%= label_tag :column_number %>
  <%= text_field_tag :column_number, @map.column_number %>
  </div>
  <div>
  <%= label_tag :journey_id %>
  <%= text_field_tag :journey_id, @map.journey_id %>
  </div>
<% end %>